@using Inlamningsuppgift2.Models
<!DOCTYPE html>

<html>

@inject TomasosContext _context

<head>
    <!--Här ligger gemensamma länkar som alla vyer skall dela på -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/css/style.css" rel="stylesheet" />

    @*<meta name="viewport" content="width=device-width" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Tomasos|@ViewBag.Title</title>

    <style>
        #buy-info {
            float: right;
            height: 100px;
            background-color: burlywood;
        }
    </style>
</head>


<body style="font-family: Verdana; color: #aaaaaa;">


    <div style="background-color: #e5e5e5; padding: 15px; text-align: center;">
        <a asp-controller="UserManager" asp-action="Login">
            <img src="~/images/pizzaLogo.jpg" width="200" />
        </a>
    </div>

    <nav>
        <ul>
            <li><a asp-controller="Home" asp-action="Index" asp-route-id="@ViewBag.Id">Start sida</a></li>

            @if (ViewBag.Id != null)
            {
                <li><a asp-controller="UserManager" asp-action="Update" asp-route-id="@ViewBag.Id">Uppdatera mina info</a></li>
                <li><a asp-controller="Order" asp-action="OrderDetalis" asp-route-id="@ViewBag.Id">Varukorg(@ViewBag.bestallningTotalbelopp)</a></li>
                <li><a asp-controller="Home" asp-action="Index">Utgång</a></li>

            }
            else
            {
                <li><a asp-controller="UserManager" asp-action="Login">Logga in</a></li>
                <li><a asp-controller="UserManager" asp-action="Register">Registrera</a></li>
            }

        </ul>
    </nav>


    <div>
        @RenderBody()
    </div>

    <div style="background-color: #e5e5e5; text-align: center; padding: 10px; margin-top: 7px;">© copyright Tomasos</div>

</body>












</html>
